<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/technical_category_container"
    style="@style/TagCategoryContainerStyle"
    android:layout_width="@dimen/suggest_tag_category_container_size"
    android:layout_height="@dimen/suggest_tag_category_container_size"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/category_icon_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_settings" />

    <TextView
        android:id="@+id/category_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/tag_category_text_color_selector"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_regular"
        tools:text="Technical"
        android:textSize="14sp" />
</LinearLayout>