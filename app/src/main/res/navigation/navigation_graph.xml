<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph.xml"
    app:startDestination="@id/home_screen">

    <fragment android:id="@+id/home_screen"
        android:name="com.endava.myendava.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
    </fragment>

    <fragment android:id="@+id/dashboard_screen"
        android:name="com.endava.myendava.fragments.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">
    </fragment>

    <fragment android:id="@+id/notifications_screen"
        android:name="com.endava.myendava.fragments.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications">
    </fragment>

    <action android:id="@+id/action_global_home_screen" app:destination="@id/home_screen"/>
    <action android:id="@+id/action_global_dashboard_screen" app:destination="@id/dashboard_screen"/>
    <action android:id="@+id/action_global_notifications_screen" app:destination="@id/notifications_screen"/>

</navigation>