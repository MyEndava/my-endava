<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/endava_orange</item>
        <item name="colorPrimaryDark">@color/endava_dark_orange</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">#00000000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:navigationBarColor">@color/endava_orange</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/endava_orange</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TransparentText" parent="AppTheme.Toolbar.Title">
        <item name="android:textColor">#00ffffff</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="SignInTextStyle">
        <item name="android:layout_marginLeft">@dimen/info_container_text_marginLeft</item>
        <item name="android:textSize">@dimen/sign_in_text_size</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/email_line_height</item>
        <item name="android:textColor">@color/emailTextColor</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

<!--    <style name="SignInHintsTextStyle">-->
<!--        <item name="android:layout_marginTop">@dimen/sign_in_email_top_margin</item>-->
<!--        <item name="android:layout_marginLeft">@dimen/sign_in_email_horizontal_margins</item>-->
